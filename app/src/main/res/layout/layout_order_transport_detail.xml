<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="24dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_marginTop="1px"
            android:layout_marginLeft="1px"
            android:layout_marginRight="1px">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/text_small"
                android:textColor="@color/colorPrimary"
                android:text="@string/order_detail_no"/>
            <ImageView
                android:layout_height="match_parent"
                android:layout_width="1px"
                android:background="@color/light"/>
            <TextView
                android:id="@+id/detail_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textSize="@dimen/text_small"
                tools:text="CSZYY123197"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="24dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_marginTop="1px"
            android:layout_marginLeft="1px"
            android:layout_marginRight="1px">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/text_small"
                android:textColor="@color/colorPrimary"
                android:text="@string/order_detail_delegate"/>
            <ImageView
                android:layout_height="match_parent"
                android:layout_width="1px"
                android:background="@color/light"/>
            <TextView
                android:id="@+id/detail_delegate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textSize="@dimen/text_small"
                tools:text="山东泛亚国际货运有限公司"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="24dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_marginTop="1px"
            android:layout_marginLeft="1px"
            android:layout_marginRight="1px">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/text_small"
                android:textColor="@color/colorPrimary"
                android:text="@string/order_detail_contact"/>
            <ImageView
                android:layout_height="match_parent"
                android:layout_width="1px"
                android:background="@color/light"/>
            <TextView
                android:id="@+id/detail_contact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textSize="@dimen/text_small"
                tools:text="王3"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="24dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_marginTop="1px"
            android:layout_marginLeft="1px"
            android:layout_marginRight="1px">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/text_small"
                android:textColor="@color/colorPrimary"
                android:text="@string/order_detail_address"/>
            <ImageView
                android:layout_height="match_parent"
                android:layout_width="1px"
                android:background="@color/light"/>
            <TextView
                android:id="@+id/detail_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textSize="@dimen/text_small"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                tools:text="山东省济南市4号"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="24dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_marginTop="1px"
            android:layout_marginLeft="1px"
            android:layout_marginRight="1px"
            android:layout_marginBottom="1px">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/text_small"
                android:textColor="@color/colorPrimary"
                android:text="@string/order_detail_remark"/>
            <ImageView
                android:layout_height="match_parent"
                android:layout_width="1px"
                android:background="@color/light"/>
            <TextView
                android:id="@+id/detail_remark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textSize="@dimen/text_small"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"/>
        </TableRow>
    </TableLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/light"/>
    <ListView
        android:id="@+id/lister"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="@color/transparent"
        android:fadeScrollbars="false"
        android:scrollbars="none"
        android:divider="@color/light"
        android:dividerHeight="1px"
        tools:listitem="@layout/item_transport_order_detail"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/light"/>
</LinearLayout>