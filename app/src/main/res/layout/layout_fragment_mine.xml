<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/mine_label"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/icon_label"/>
        <TextView
            android:id="@+id/mine_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/text_big"
            android:textColor="@color/text_main"
            tools:text="这是我的"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:paddingRight="10dp"
                android:paddingEnd="10dp"
                android:textSize="@dimen/text_small"
                android:textColor="@color/text_main"
                android:text="@string/online"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/mine_online"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:paddingRight="10dp"
                android:paddingEnd="10dp"
                android:textSize="@dimen/text_small"
                android:textColor="@color/text_main"
                android:gravity="center"/>
        </LinearLayout>

        <include layout="@layout/view_line_horizontal_light"/>
        <TextView
            android:id="@+id/mine_pwd_modify"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:textSize="@dimen/text_small"
            android:textColor="@color/text_main"
            android:text="@string/pwd_modify"
            android:drawableRight="@drawable/icon_more"
            android:drawableEnd="@drawable/icon_more"
            android:gravity="center_vertical"/>

        <include layout="@layout/view_line_horizontal_light"/>
        <TextView
            android:id="@+id/mine_update_check"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:textSize="@dimen/text_small"
            android:textColor="@color/text_main"
            android:text="@string/update_check"
            android:drawableRight="@drawable/icon_more"
            android:drawableEnd="@drawable/icon_more"
            android:gravity="center_vertical"/>

        <include layout="@layout/view_line_horizontal_light"/>
        <TextView
            android:id="@+id/mine_feedback"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:textSize="@dimen/text_small"
            android:textColor="@color/text_main"
            android:text="@string/feedback"
            android:drawableRight="@drawable/icon_more"
            android:drawableEnd="@drawable/icon_more"
            android:gravity="center_vertical"/>
        <include layout="@layout/view_line_horizontal_light"/>
        <Button
            android:id="@+id/mine_logout"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_margin="20dp"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:textSize="@dimen/text_big"
            android:background="@drawable/bg_edit_translucent"
            android:textColor="@color/red"
            android:text="@string/logout"/>
    </LinearLayout>
</ScrollView>
