<?xml version="1.0" encoding="utf-8"?>
<!--运输单管理 总列表单项-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/bg_edit_translucent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            android:text="@string/team_name"/>
        <TextView
            android:id="@+id/team_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingRight="5dp"
            android:paddingEnd="5dp"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            android:textColor="@color/text_main"
            android:textIsSelectable="true"
            tools:text="法拉利车队"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            android:text="@string/team_code"/>
        <TextView
            android:id="@+id/team_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingRight="5dp"
            android:paddingEnd="5dp"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            android:textColor="@color/text_main"
            android:textIsSelectable="true"
            tools:text="007"/>
    </LinearLayout>

    <include layout="@layout/view_line_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            android:text="@string/team_contact"/>
        <TextView
            android:id="@+id/team_contact"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingRight="5dp"
            android:paddingEnd="5dp"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            android:textColor="@color/text_main"
            android:textIsSelectable="true"
            tools:text="杨二车娜姆"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            android:text="@string/team_label_normal"/>
        <TextView
            android:id="@+id/team_label_normal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingRight="5dp"
            android:paddingEnd="5dp"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            android:textColor="@color/text_main"
            android:textIsSelectable="true"
            tools:text="鲁A12345"/>
    </LinearLayout>

    <include layout="@layout/view_line_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            android:text="@string/team_account"/>
        <TextView
            android:id="@+id/team_account"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingRight="5dp"
            android:paddingEnd="5dp"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            android:textColor="@color/text_main"
            android:textIsSelectable="true"
            tools:text="adfsfwer"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            android:text="@string/team_nick"/>
        <TextView
            android:id="@+id/team_nick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingRight="5dp"
            android:paddingEnd="5dp"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            android:textColor="@color/text_main"
            android:textIsSelectable="true"
            tools:text="小玩意"/>
    </LinearLayout>

    <include layout="@layout/view_line_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            android:text="@string/team_account_name"/>
        <TextView
            android:id="@+id/team_account_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingRight="5dp"
            android:paddingEnd="5dp"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            android:textColor="@color/text_main"
            android:textIsSelectable="true"
            tools:text="hahaha"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            android:text="@string/team_phone"/>
        <TextView
            android:id="@+id/team_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingRight="5dp"
            android:paddingEnd="5dp"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            android:textColor="@color/text_main"
            android:textIsSelectable="true"
            tools:text="hahaha"/>
    </LinearLayout>

    <include layout="@layout/view_line_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            android:text="@string/team_card_id"/>
        <TextView
            android:id="@+id/team_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingRight="5dp"
            android:paddingEnd="5dp"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            android:textColor="@color/text_main"
            android:textIsSelectable="true"
            tools:text="123456789009877"/>
    </LinearLayout>

    <include layout="@layout/view_line_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/team_modify"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_width="48dp"
            android:layout_height="28dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/selector_btn_bg"
            android:gravity="center"
            android:textSize="@dimen/text_small"
            android:textColor="@color/white"
            android:text="@string/modify"/>
        <TextView
            android:id="@+id/team_operation"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_width="48dp"
            android:layout_height="28dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/selector_btn_bg"
            android:gravity="center"
            android:textSize="@dimen/text_small"
            android:textColor="@color/white"
            android:text="@string/stop"/>
    </LinearLayout>
</LinearLayout>