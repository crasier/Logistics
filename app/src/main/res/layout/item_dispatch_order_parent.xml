<?xml version="1.0" encoding="utf-8"?>
<!--派车单管理 总列表单项-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/order_top"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/selector_item_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/order_main_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                tools:text="提单号：1234567890"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small"/>
            <TextView
                android:id="@+id/container"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                tools:text="箱号：1234567890"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small"/>
        </LinearLayout>
        <TextView
            android:id="@+id/dispatch_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="100dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            tools:text="已接单待派车"
            android:gravity="center_vertical|end"
            android:textColor="@color/white"
            android:textSize="@dimen/text_small"/>
        <ImageView
            android:id="@+id/order_main_arrow"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_arrow"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/order_get_change"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_width="72dp"
            android:layout_height="28dp"
            android:layout_margin="15dp"
            android:background="@drawable/selector_btn_bg"
            android:gravity="center"
            android:textSize="@dimen/text_small"
            android:textColor="@color/white"
            android:text="@string/dispatch_operation_get"/>
        <TextView
            android:id="@+id/order_return_change"
            tools:visibility="visible"
            android:visibility="gone"
            android:layout_width="72dp"
            android:layout_height="28dp"
            android:layout_margin="15dp"
            android:background="@drawable/selector_btn_bg"
            android:gravity="center"
            android:textSize="@dimen/text_small"
            android:textColor="@color/white"
            android:text="@string/dispatch_operation_return"/>
    </LinearLayout>

    <include layout="@layout/item_dispatch_order_child"
        android:id="@+id/order_main_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"/>
</LinearLayout>