<?xml version="1.0" encoding="utf-8"?>
<!--运输单管理 总列表单项-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/bg_edit_translucent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            android:text="@string/driver_account"/>
        <TextView
            android:id="@+id/driver_account"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingRight="5dp"
            android:paddingEnd="5dp"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            android:textColor="@color/text_main"
            android:textIsSelectable="true"
            tools:text="testdriver0001"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            android:text="@string/driver_name"/>
        <TextView
            android:id="@+id/driver_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingRight="5dp"
            android:paddingEnd="5dp"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            android:textColor="@color/text_main"
            android:textIsSelectable="true"
            tools:text="007"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            android:text="@string/driver_nick"/>
        <TextView
            android:id="@+id/driver_nick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingRight="5dp"
            android:paddingEnd="5dp"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            android:textColor="@color/text_main"
            android:textIsSelectable="true"
            tools:text="testdriver0001"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            android:text="@string/driver_phone"/>
        <TextView
            android:id="@+id/driver_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingRight="5dp"
            android:paddingEnd="5dp"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            android:textColor="@color/text_main"
            android:textIsSelectable="true"
            tools:text="15555555555"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            android:text="@string/driver_card_id"/>

        <TextView
            android:id="@+id/driver_card_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:paddingEnd="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:textColor="@color/text_main"
            android:textIsSelectable="true"
            android:textSize="@dimen/text_small"
            tools:text="370101201806187654" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            android:text="@string/driver_truck_no"/>
        <TextView
            android:id="@+id/driver_truck"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingRight="5dp"
            android:paddingEnd="5dp"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            android:textColor="@color/text_main"
            android:textIsSelectable="true"
            tools:text="1234567890985675675"/>
    </LinearLayout>

    <include layout="@layout/view_line_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/driver_modify"
            tools:visibility="visible"
            android:layout_width="48dp"
            android:layout_height="28dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/selector_btn_bg"
            android:gravity="center"
            android:textSize="@dimen/text_small"
            android:textColor="@color/white"
            android:text="@string/modify"/>
        <TextView
            android:id="@+id/driver_operation"
            tools:visibility="visible"
            android:layout_width="48dp"
            android:layout_height="28dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/selector_btn_bg"
            android:gravity="center"
            android:textSize="@dimen/text_small"
            android:textColor="@color/white"
            android:text="@string/stop"/>
    </LinearLayout>
</LinearLayout>