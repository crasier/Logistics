<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="24dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/detail_container_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="@dimen/text_small"
            tools:text="集装箱号"/>
        <include layout="@layout/view_line_vertical_light"/>
        <TextView
            android:id="@+id/detail_container_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/text_small"
            tools:text="类型"/>
        <include layout="@layout/view_line_vertical_light"/>
        <TextView
            android:id="@+id/detail_container_size"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/text_small"
            tools:text="尺寸"/>
        <include layout="@layout/view_line_vertical_light"/>
        <TextView
            android:id="@+id/detail_container_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="@dimen/text_small"
            tools:text="送货时间"/>
        <include layout="@layout/view_line_vertical_light"/>
        <TextView
            android:id="@+id/detail_container_place"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:textSize="@dimen/text_small"
            tools:text="还箱地"/>
    </LinearLayout>

</LinearLayout>