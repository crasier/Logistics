<?xml version="1.0" encoding="utf-8"?>
<!--添加车队账号界面-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/driver_add_view_account"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_mid"
            android:textColor="@color/colorPrimary"
            android:drawableLeft="@drawable/icon_star_red"
            android:drawableStart="@drawable/icon_star_red"
            android:text="@string/driver_account"
            android:gravity="center"/>
        <EditText
            android:id="@+id/driver_add_account"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:background="@drawable/bg_edit"
            android:textColor="@color/text_main"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            tools:text="123456"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/driver_add_view_password"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_mid"
            android:textColor="@color/colorPrimary"
            android:drawableLeft="@drawable/icon_star_red"
            android:drawableStart="@drawable/icon_star_red"
            android:text="@string/driver_add_pwd"
            android:gravity="center"/>
        <EditText
            android:id="@+id/driver_add_pwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:background="@drawable/bg_edit"
            android:textColor="@color/text_main"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            tools:text="123456"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_mid"
            android:textColor="@color/colorPrimary"
            android:drawableLeft="@drawable/icon_star_red"
            android:drawableStart="@drawable/icon_star_red"
            android:text="@string/driver_add_name"
            android:gravity="center"/>
        <EditText
            android:id="@+id/driver_add_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:background="@drawable/bg_edit"
            android:textColor="@color/text_main"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            tools:text="123456"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_star_red"
            android:drawableStart="@drawable/icon_star_red"
            android:textSize="@dimen/text_mid"
            android:textColor="@color/colorPrimary"
            android:text="@string/driver_add_phone"
            android:gravity="center"/>
        <EditText
            android:id="@+id/driver_add_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:background="@drawable/bg_edit"
            android:textColor="@color/text_main"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            tools:text="123456"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_mid"
            android:textColor="@color/colorPrimary"
            android:text="@string/driver_add_card_id"
            android:gravity="center"/>
        <EditText
            android:id="@+id/driver_add_card_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:background="@drawable/bg_edit"
            android:textColor="@color/text_main"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            tools:text="123456"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_mid"
            android:textColor="@color/colorPrimary"
            android:text="@string/driver_add_nick"
            android:gravity="center"/>
        <EditText
            android:id="@+id/driver_add_nick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:background="@drawable/bg_edit"
            android:textColor="@color/text_main"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            tools:text="123456"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_mid"
            android:textColor="@color/colorPrimary"
            android:text="@string/driver_add_truck"
            android:gravity="center"/>
        <EditText
            android:id="@+id/driver_add_truck"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:background="@drawable/bg_edit"
            android:textColor="@color/text_main"
            android:textSize="@dimen/text_small"
            android:gravity="center_vertical"
            tools:text="123456"/>
    </LinearLayout>

    <Button
        android:id="@+id/driver_add_commit"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@drawable/selector_btn_bg"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:text="@string/sure"
        android:textColor="@color/white"
        android:textSize="@dimen/text_mid"/>
</LinearLayout>