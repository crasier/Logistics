<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/base_top"
                android:visibility="gone"
    tools:visibility="visible"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:gravity="center_vertical"
              android:background="@color/colorPrimary"
              android:layout_height="56dp">
    <ImageView
        android:id="@+id/base_top_left"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center_vertical"
        tools:src="@drawable/icon_back_dark"
        android:scaleType="center"/>
    <com.sdeport.logistics.common.widgets.MarqueeTextView
        android:id="@+id/base_top_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/text_big"
        android:textColor="@color/white"
        tools:text="标题"/>
    <TextView
        android:id="@+id/base_top_right_text"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="@dimen/text_mid"
        android:textColor="@color/text_gray"
        android:gravity="center"
        tools:text="保存"/>
    <ImageView
        android:id="@+id/base_top_right"
        android:visibility="gone"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_gravity="center_vertical"
        tools:src="@drawable/icon_close"
        android:scaleType="center"/>
</LinearLayout>